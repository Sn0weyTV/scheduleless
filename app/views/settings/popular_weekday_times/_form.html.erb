<%= simple_form_for [:settings, period] do |f| %>
  <%= f.input :type, as: :hidden %>

  <%= f.input :day_start,
    as: :select,
    collection: TimeRange::DAY_OPTIONS,
    include_blank: false
  %>
  <div class="inline">
    <%= f.input :time_start,
      as: :select,
      collection: TimeRange.quarter_hour_options,
      include_blank: false
    %>
    <%= f.input :time_end,
      as: :select,
      collection: TimeRange.quarter_hour_options,
      include_blank: false
    %>
  </div>

  <%= f.input :level,
    as: :select,
    collection: PopularTime.level_options,
    include_blank: false %>

  <%= f.submit %>
<% end %>
