<div class="settings-schedule-rules-form">
  <%= simple_form_for [:settings, @schedule_rule] do |f| %>
    <section>
      <%= t(".need") %>
      <%= f.input :number_of_employees, error: false, label: false %>
      <%= f.association :position,
        collection: current_company.positions,
        include_blank: false,
        error: false, label: false %><%= t(".plural") %>
      <%= f.input :period, collection: ScheduleRule.collection_labels, error: false, label: false %>
    </section>

    <% if @schedule_rule.errors.present? %>
      <div class="errors">
        <ul>
          <% @schedule_rule.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
