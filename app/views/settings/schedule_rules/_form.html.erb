<div class="schedule-rules-form">
  <%= simple_form_for [:settings, @schedule_rule] do |f| %>
    <div>
      I need
      <%= f.input :number_of_employees, label: false %>
      <%= f.association :position, label: false %>(s)
      <%= f.input :period, collection: ScheduleRule.collection_labels, label: false, error: false %>
    </div>

    <div class="errors">
      <% @schedule_rule.errors.full_messages.each do |error| %>
        <%= error %><br>
      <% end %>
    </div>

    <br>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
