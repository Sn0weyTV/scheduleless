<%= simple_form_for :search, url: public_companies_searches_path, method: :get do |f| %>
  <%= f.input :query %>

  <%= f.submit %>
<% end %>


<% if @results.present? %>
  <h3>Results</h3>

  <% @results.each do |result| %>
    <%= link_to(result.name, public_company_path(result)) %><br />
  <% end %>

  <%= paginate @results %>
<% end %>

