<div class="settings-schedule-rules-schedule-rules">
  <table class="bordered striped">
    <% schedule_rules.each do |schedule_rule| %>
      <tr>
        <td>
          <% if schedule_rule.day.nil? %>
            <%= t("settings.schedule_rules.schedule_rule.requirement",
              position: pluralize(
                schedule_rule.number_of_employees,
                schedule_rule.position.name
              ),
              period: t("models.schedule_rule.#{schedule_rule.period}"),
              count: schedule_rule.number_of_employees
            ) %>
          <% else %>
            <%= t("settings.schedule_rules.schedule_rule.requirement.day",
                  position: pluralize(
                    schedule_rule.number_of_employees,
                    schedule_rule.position.name
                  ),
                  period: t("models.schedule_rule.#{schedule_rule.period}"),
                  count: schedule_rule.number_of_employees,
                  day: schedule_rule.day_name
               ) %>
          <% end %>
        </td>
        <td>
          <%= link_to "Edit",
            edit_admin_company_schedule_rule_path(@company, schedule_rule),
            class: "button link" %>
          <%= button_to "Delete",
            admin_company_schedule_rule_path(@company, schedule_rule),
            class: "button link",
            method: :delete %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
