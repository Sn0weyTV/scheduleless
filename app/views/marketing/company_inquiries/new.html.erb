              <div class="inline">
                <%= f.input :job_title %>
                <%= f.input :company_name %>
              </div>
            </section>

            <footer>
              <%= f.submit "Connect With Us", class: "button purple" %>
            </footer>
          <% end %>
        </div>
      </article>
    </section>
  </div>
</div>

