      <article>
        <div class="form">
          <%= simple_form_for [@inquiry] do |f| %>
            <header>
              <h3>Tell us about yourself and we'll get right back to you.</h3>
            </header>

            <section>
              <div class="inline">
                <%= f.input :first_name %>
                <%= f.input :last_name %>
