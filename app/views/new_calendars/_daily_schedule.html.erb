<div class="new-calendars-daily-schedule">
  <article>
    <div>
      <aside>
        <%= render partial: "new_calendars/users",
          locals: { presenter: presenter } %>
      </aside>

      <section>
        <div class="<%= presenter.shift_view_width_class %>">
          <section>
            <%= render partial: "new_calendars/shifts",
              locals: { presenter: presenter } %>
          </section>
        </div>
      </section>

    </div>
  </article>

  <% if presenter.manage? %>
    <%= render partial: "new_calendars/toolbar",
      locals: { presenter: presenter } %>
  <% end %>
</div>
