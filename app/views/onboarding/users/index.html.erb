<div class="instructions">
  <h3><%= t(".title") %></h3>
  <%= t(".description") %>
</div>

<% if @users.present? %>
  <table class="table">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %><td>
        <td><%= user.given_name %><td>
        <td><%= user.family_name %><td>
        <td>
          <%= button_to onboarding_user_path(user), method: :delete do %>
            <span class="oi oi-x"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <br><br>
  <div class="center">
    <%= t(".no_users") %>
  </div>
<% end %>

<br><br>
<div class="center light">
  <div>
    <%= link_to t(".add"),
      new_onboarding_location_user_path(@location),
      class: "button" %>
  </div>
</div>


<footer>
  <div>
    <%= link_to t(".back"), onboarding_locations_path, class: "button white" %>
  </div>
  <div>
    <% if current_company.locations.present? && current_company.users.present? %>
      <%= link_to t(".start"),
        new_onboarding_schedule_path,
        class: "button orange"
      %>
    <% else %>
      <button class="button orange" disabled="disabled">
        <%= t(".start") %>
      </button>
    <% end %>
  </div>
</footer>
