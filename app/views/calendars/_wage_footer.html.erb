<footer id="calendars-wage-footer">
  <div>&nbsp;</div>
  <% date_range.each do |date| %>
    <div>
      <section>
        <%= pluralize(wages.for_date(date).total_hours, "hour") %>
      </section>
      <section>
        <%= Currency::FromNumber.for(wages.for_date(date).total_pay) %>
      </section>
    </div>
  <% end %>
</footer>
