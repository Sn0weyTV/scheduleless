<div class="new-calendars-shift-week-view <%= shift.classes %>">
  <section>
    <div><%= shift.time_range %></div>
    <div><%= shift.position %></div>
  </section>

  <% if shift.repeating? %>
    <div class="repeating-shift-icon">
      <div>
        <span class="oi oi-loop-circular"></span>
      </div>
    </div>
  <% end %>

  <% if presenter.manage? %>
    <%= render partial: "calendars/shared/shift_actions",
      locals: { shift: shift } %>
  <% end %>
</div>
