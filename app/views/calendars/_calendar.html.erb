<table class="table calendar-<%= presenter.format %>">
  <thead>
    <tr>
      <% presenter.days.map do |day| %>
        <th><%= day %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% presenter.weeks.map do |week| %>
        <tr>
        <% week.map do |day| %>
          <% classname = (day.month == presenter.day.month) ? "" : "inactive" %>

          <td class="<%= classname %>">
            <div>
              <%= presenter.day_block(day) %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
