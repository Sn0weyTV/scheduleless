<% if schedule_rule.day.nil? %>
  <%= t(".requirement",
          position: pluralize(
            schedule_rule.number_of_employees,
            schedule_rule.position.name
          ),
          period: t("models.schedule_rule.#{schedule_rule.period}"),
          count: schedule_rule.number_of_employees
       ) %>
<% else %>
  <%= t(".requirement.day",
          position: pluralize(
            schedule_rule.number_of_employees,
            schedule_rule.position.name
          ),
          period: t("models.schedule_rule.#{schedule_rule.period}"),
          count: schedule_rule.number_of_employees,
          day: schedule_rule.day_name
       ) %>
<% end %>

