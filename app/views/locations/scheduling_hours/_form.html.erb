<%= simple_form_for [:locations, @location, @scheduling_hour] do |f| %>
  <%= f.input :day,
    as: :select,
    collection: TimeRange::DAY_OPTIONS,
    :label => t('.day')
  %>
  <%= f.input :minute_open_start,
    as: :select,
    collection: TimeRange.quarter_hour_options,
    :label => t('.business_start_time')
  %>
  <%= f.input :minute_open_end,
    as: :select,
    collection: TimeRange.quarter_hour_options,
    :label => t('.business_end_time')
  %>

  <div class="instructions">
    <div class="title"><%= t('.optional') %>:</div>
    <%= f.input :minute_schedulable_start,
      as: :select,
      collection: TimeRange.quarter_hour_options,
      :label => t('.scheduling_start_time')
    %>
    <%= f.input :minute_schedulable_end,
      as: :select,
      collection: TimeRange.quarter_hour_options,
      :label => t('.scheduling_end_time')
    %>
  </div>

  <%= f.submit %>
<% end %>
