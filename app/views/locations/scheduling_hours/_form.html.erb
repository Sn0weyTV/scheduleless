<%= simple_form_for [:locations, @location, @scheduling_hour] do |f| %>
  <%= f.input :day,
    as: :select,
    collection: TimeRange::DAY_OPTIONS,
    disabled: true,
    label: t(".day")
  %>
  <%= f.input :minute_open_start,
    as: :select,
    collection: TimeRange.quarter_hour_options
  %>
  <%= f.input :minute_open_end,
    as: :select,
    collection: TimeRange.quarter_hour_options
  %>

  <br>
  <%= f.submit %>
<% end %>
