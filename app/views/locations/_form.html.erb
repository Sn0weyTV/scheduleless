<%= simple_form_for location do |f| %>
    <section>
      <article>
        <%= f.input :name %>
        <%= f.input :line_1 %>
        <%= f.input :line_2 %>

        <div class="inline">
          <%= f.input :city %>
          <%= f.input :county_province,
            as: :select,
            include_blank: true,
            collection: CountiesProvinces.state_options
          %>
          <%= f.input :postalcode %>
        </div>

        <%= f.input :city %>
        <%= f.input :county_province,
          as: :select,
          include_blank: true,
          collection: CountiesProvinces.state_options
        %>
        <%= f.input :postalcode %>
        <%= f.input :country,
          as: :select,
          include_blank: true,
          collection: Countries.options
        %>

        <div class="inline">
          <%= f.input :country %>
          <%= f.input :time_zone, priority: /US/ %>
        </div>
      </article>
    </section>

  <%= f.submit %>
<% end %>
