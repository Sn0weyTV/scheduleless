<%= simple_form_for [:locations, @location, @user] do |f| %>
  <%= f.input :email %>
  <%= f.input :given_name %>
  <%= f.input :family_name %>
  <%= f.input :mobile_phone %>
  <%= f.input :wage, as: :currency, input_html: {value: @user.wage} %>

  <%= f.association :primary_position,
    collection: current_company.positions %>

  <%= f.association :positions,
    collection: current_company.positions,
    as: :check_boxes %>

  <%= f.submit %>
<% end %>
