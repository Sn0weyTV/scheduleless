<div class="frame">
  <header>
    <div>
      <%= @location.name || t(".default_title") %>
      <% if policy(@location).edit? %>
        <aside>
          <%= link_to t(".edit"), edit_location_path(@location) %>
        </aside>
      <% end %>
    </div>
  </header>

  <section>
    <article>
      <%= AddressFormatter.for(@location).multiline_html %>
      <br />
      <br />

      <strong><%= t(".invitation_url") %>:</strong>
      <p><%= location_join_url(@location.hash_key) %></p>
    </article>
  </section>
</div>

<div class="frame">
  <header>
    <div><%= t(".employees") %></div>
  </header>

  <section>
    <%= render partial: "users/users",
      locals: {
        users: UserFinder.
          new(location: @location).
          by_location_without(current_user)
      } %>
  </section>
</div>
