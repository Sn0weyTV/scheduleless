<header class="view-header vertical">
  <div>
    <h2><%= @presenter.user.full_name %></h2>
  </div>

  <div>
    <%= @presenter.user.primary_position&.name || "Position n/a" %>
  </div>
</header>

<br />


<div class="rail narrow">
  <section>
    <aside>
      <%= render partial: "business/employees/shared/sidebar" %>
    </aside>

    <article>
      <div class="frame narrow">
        <header class="light">
          <div>Coworkability Score</div>
        </header>
        <section>
          <article>
            <% @presenter.months.each do |month| %>
              <%= render partial: "incidents_for_month", locals: {
                presenter: @presenter,
                month: month
              } %>
            <% end %>
          </article>
        </section>
      </div>
    </article>
  </section>
</div>
