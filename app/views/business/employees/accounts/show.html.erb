<header class="view-header vertical">
  <div>
    <h2><%= @user.full_name %></h2>
  </div>

  <div>
    <%= @user.primary_position&.name || "Position n/a" %>
  </div>
</header>

<br />


<div class="rail narrow">
  <section>
    <aside>
      <%= render partial: "business/employees/shared/sidebar" %>
    </aside>

    <article>
      <div class="frame narrow">
        <header class="light">
          <div>Account Info</div>
        </header>

        <section>
          <article>
            <div class="field-display">
              <div>
                <aside>Login Email</aside>
                <article>
                  <div>
                    <%= @user.login_user&.email %>
                  </div>

                  <div class="note">This can only be changed by the employee</div>
                </article>
              </div>


              <div>
                <aside>Invitation Status</aside>
                <article>
                  <%= Users::InvitationState.new(user: @user).readable_state  %>
                </article>
              </div>

            </div>

          </article>
        </section>
      </div>
    </article>
  </section>
</div>
