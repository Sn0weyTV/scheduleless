<%= simple_form_for [:remote, @location, @shift], remote: true do |f| %>
  <%= f.input :date,
    as: :datepicker %>

  <%= f.input :minute_start,
    as: :time_picker_range,
    input_html: {
      collection: TimeRange.quarter_hour_options.to_json
    }
  %>

  <%= f.input :user_id,
    as: :select,
    collection: @location.users,
    label_method: :full_name,
    value_method: :id
  %>

  <%= f.submit %>
<% end %>
