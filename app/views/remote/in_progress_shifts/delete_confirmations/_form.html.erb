<div class="remote-in-progress-shifts-delete-confirmations-form">
  <article>
    <% if confirmation.in_progress_shift.published? %>
      This shift is published and deleting will have issues.
    <% else %>
      Are you sure you want to delete this shift?
    <% end %>
  </article>

<%= simple_form_for(
  confirmation,
  url: remote_in_progress_shifts_in_progress_shift_delete_confirmation_path(
    confirmation.in_progress_shift
  ),
  remote: true
) do |f| %>
  <%= f.input :in_progress_shift_id, as: :hidden %>

  <% if confirmation.in_progress_shift.repeating? %>
    <%= f.input :delete_series, as: :boolean, checked: true, default: false %>
  <% end %>


  <%= f.submit "Delete" %>
<% end %>

</div>

