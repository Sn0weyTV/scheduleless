window.Scheduleless.sidebar.close();

window.
  Scheduleless.
  sidebar.
  togglePublishedShiftHint(<%= Shifts::Unpublished.new(@location).present? %>);

window.Scheduleless.calendar.redraw("<%= j(render(partial: "calendars/show",
             locals: {
               presenter: presenter_class.
                 new(date: params[:display_date] || Date.today.to_s(:integer),
                     location: @location,
                     user: current_user
                    )
})) %>");
