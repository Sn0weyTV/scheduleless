<%= simple_form_for [:remote, @location, posting], remote: true do |f| %>
  <%= f.input :all_shifts,
    as: :boolean,
    input_html: {
      class: "disable-toggle",
      data: { target: ".posting-date-range" }
    } %>

  <div class="posting-date-range">
    <%= f.input :date_start, as: :datepicker_range %>
  </div>

  <%= f.submit %>
<% end %>
