<%= simple_form_for [:remote,
                     :calendar,
                     favorite_shift.location,
                     favorite_shift], remote: true do |f| %>
  <%= f.input :location_id, as: :hidden %>

  <%= f.association :position,
    collection: current_company.positions,
    include_blank: false %>
  <%= f.input :start_minute,
    as: :select,
    collection: TimeRange.quarter_hour_options %>
  <%= f.input :end_minute,
    as: :select,
    collection: TimeRange.quarter_hour_options %>
  <%= f.input :week_day,
    as: :select,
    collection: FavoriteShift.week_day_options,
    include_blank: false %>

  <%= f.submit %>
<% end %>
