<%= simple_form_for [:remote, :new_calendar, @location, @shift] do |f| %>
  <%= f.input :date, as: :datepicker %>
  <%# f.input :scheduling_period_id, as: :hidden %>
  <%= f.input :minute_start,
    as: :select,
    collection: TimeRange.quarter_hour_options,
    label: t('.start_time')
  %>

  <%= f.input :minute_end,
    as: :select,
    collection: TimeRange.quarter_hour_options,
    label: t('.end_time')
  %>

  <%= f.input :user_id,
    as: :select,
    collection: @location.users,
    label_method: :full_name,
    value_method: :id
  %>

  <%= f.submit %>
<% end %>
