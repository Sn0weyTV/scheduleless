$(".selected-day").removeClass("selected-day");
$(".<%= @presenter.date.to_s %>").addClass("selected-day");

<% if params[:view] == "week" %>
  $("#daily-schedule").
    html("<%= j(render partial: "calendars/week_schedule", locals: {
      presenter: WeekSchedulePresenter.new(
        day: @presenter.date,
        location: @presenter.current_location
        )
    }) %>");
<% else %>
  $("#daily-schedule").
    html("<%= j(render partial: "calendars/day_schedule", locals: {
      presenter: @presenter
    }) %>");
<% end %>




$("#daily-schedule").
  find('[data-toggle="tooltip"]').
  tooltip();
