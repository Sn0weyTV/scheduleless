<% offers.each do |offer| %>
  <div class="dashboard-approvals-trade-offers">
    <article>
      <div class="message">
        <% if offer.offered_shift_id.present? %>
          <%= offer.user.full_name %> offered a shift of their own
        <% else %>
          <%= offer.user.full_name %> offered to take this shift
        <% end %>
      </div>

      <div class="actions">
        <div class="approve">
          <%= button_to "Approve", remote_dashboard_offers_offer_approval_path(offer), remote: true %>
        </div>

        <div class="deny">
          <%= button_to "Decline", remote_dashboard_offers_offer_denial_path(offer), remote: true %>
        </div>
      </div>
    </article>
  </div>
<% end %>
