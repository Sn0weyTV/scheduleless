<div class="dashboards-upcoming-shifts-shift">
  <div class="date">
    <div>
      <%= DateAndTime::Parser.new(date: shift.date).dashboard_format %>
    </div>
  </div>

  <div class="time">
    <div>
      <span>
        <%= "#{MinutesToTime.for(shift.minute_start)} - #{MinutesToTime.for(shift.minute_end)}" %>
      </span>
    </div>
    <div><%= shift.position&.name %></div>
    <div><%= pluralize(shift.length_in_hours, "hour") %></div>

    <% if shift.location.name.present? %>
      <div><%= shift.location.name  %></div>
    <% end %>
  </div>
</div>
