<!DOCTYPE html>
<html>
  <head>
    <title>Scheduler</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:200,400|Roboto:300,400" rel="stylesheet">
  </head>

  <body>
    <div class="app-container">
      <%= render partial: "layouts/shared/top_nav" %>
      <div class="site-content">
        <%= render partial: "layouts/shared/side_menu" %>
        <div class="view-content">
          <% if notice.present? %>
            <div class="notice"><%= notice %></div>
          <% end %>

          <% if alert.present? %>
            <div class="alert"><%= alert %></div>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>

    <% if Rails.env.production? %>
      <%= render partial: "reamaze/reamaze", locals: {
        brand_subdomain: "scheduleless",
        sso_key: Rails.application.secrets.reamaze,
        user_id: current_user.id,
        user_email: current_user.email,
        user: current_user
      } %>
    <% end %>

  </body>
</html>
