<!DOCTYPE html>
<html>
  <head>
    <title>Scheduleless</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'onboarding', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'onboarding', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="frame">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>

    <% if current_user.present? && Rails.env.production? %>
      <%= render partial: "reamaze/reamaze", locals: {
        brand_subdomain: "support",
        sso_key: Rails.application.secrets.reamaze,
        user_id: current_user.id,
        user_email: current_user.email,
        user: current_user
      } %>
    <% elsif Rails.env.production? %>
        <%= render partial: "reamaze/reamaze",
          locals: { brand_subdomain: "support" } %>
    <% end %>
  </body>
</html>
