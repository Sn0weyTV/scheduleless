<%= simple_form_for [:locations, @location, @shift] do |f| %>

  <%= f.input :minute_start,
    as: :select,
    collection: TimeRange.quarter_hour_options,
    :label => t('.start_time')
  %>

  <%= f.input :minute_end,
    as: :select,
    collection: TimeRange.quarter_hour_options,
    :label => t('.end_time')
  %>

  <%= f.input :year,
    as: :select,
    collection: TimeRange.year_options,
    :label => t('.year')
  %>

  <%= f.input :month,
    as: :select,
    collection: TimeRange.month_options,
    :label => t('.month')
  %>

  <%= f.input :date,
    as: :select,
    collection: TimeRange.date_options,
    :label => t('.date')
  %>

  <%= f.input :user_id,
    as: :select,
    collection: @users,
    label_method: :given_name,
    :label => t('.assigned_employee')
  %>

  <%= f.submit %> <%= link_to "Cancel", location_calendar_path, {:class=>"btn btn-link"} %>

<% end %>
